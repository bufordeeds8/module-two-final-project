
<%= flash[:error] %>
<%= form_with model: @user, class: :"text-center border border-light p-5" do |f| %>
<p class="h4 mb-4">Register</p>
         <%= f.text_field     :first_name, class: :"form-control mb-4", placeholder: :"First Name" %>
         <%= f.text_field     :last_name, class: :"form-control mb-4", placeholder: :"Last Name" %>
         <%= f.text_field     :user_name, class: :"form-control mb-4", placeholder: :"User Name" %>
         <%= f.password_field :password, class: :"form-control mb-4", placeholder: :"Password" %>
         <%= f.password_field :password_confirmation, class: :"form-control mb-4", placeholder: :"Confirm Password" %>
         <%= f.submit "Register", :class => 'btn btn-info btn-block my-4' %><br>
  <% end %>
