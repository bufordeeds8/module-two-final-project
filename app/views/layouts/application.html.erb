<!DOCTYPE html>
<html>
  <head>
    <style>
      .view {
        
        background-color: rgb(243,243,243);
    }
    html,
    body,
    header,
    .view {
      height: 100%;
    }
    @media all and (min-width:991px) {
   #hide-button { display:none; }
    }   
    </style>
    <title>Errand Runner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <nav class="navbar fixed-top navbar-expand-lg navbar-light" >
      <a class="navbar-brand" style="color: black" href="/"><strong>Errand Runner</strong></a>
      <button id="hide-button" class="navbar-toggler-light" style="color: black" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon" color="black" ></span>
      </button>
      <div class="collapse navbar-collapse"id="navbarSupportedContent" >
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <% if session[:current_user_id] %>
            <a class="nav-link" style="color: #000000" href="/errands">Home <span class="sr-only">(current)</span></a>
            <% else %>
            <a class="nav-link" style="color: #000000" href="/login">Home <span class="sr-only">(current)</span></a>
            <% end %>
          </li>
          <li class="nav-item">
            <a class="nav-link" style="color: #000000" href="/users/new">Register</a>
          </li>
          <li class="nav-item">
              <% if session[:current_user_id] %>
            <a class="nav-link" style="color: #000000" href="/logout">Sign Out </a>
            <% else %>
            <a class="nav-link" style="color: #000000" href="/login">Sign in</a>
            <% end %>
          </li>
          <% if session[:current_user_id] %>
          <li class="nav-item">
              <a class="nav-link" style="color: #000000" href="/users/<%= session[:current_user_id]%>"><%= session[:current_user] %></a>
            </li>
            <% end %>
        </ul>
      </div>
    </nav>
  
    <div class="view intro-2">
      <div class="full-bg-img">
        <div class="mask rgba-black-light flex-center">
          <div class="container text-center white-text">
            <div class="white-text text-center wow fadeInUp">
                <br><br><br><br><br>
                <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </head>

  <body>
       
  </body>
</html>
